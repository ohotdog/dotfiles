background 	= ${xrdb:color0}


[bar/main_bar]
monitor = ${env:MONITOR:LVDS1}
bottom = false
width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = ${colors.color00}
foreground =  ${colors.foreground}

